def contar_palavras(frase):
    palavras = frase.split()
    contagem = {}
    for palavra in palavras:
        if palavra in contagem:
            contagem[palavra] += 1
        else:
            contagem[palavra] = 1
    return contagem

# Exemplo de uso
frase = "banana uva maçã banana uva laranja acerola maçã maçã acerola"
resultado = contar_palavras(frase)
print(resultado)